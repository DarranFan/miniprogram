@import "../movie/movie.wxss";
.movie-list-container{
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.inner{
  margin: 0 auto 20rpx;
}
.movie-head{
  padding: 30rpx 20rpx 22rpx;
}
.movie-slogan{
  font-size: 24rpx;
}
.more{
  float: right;
}
.more-text{
  vertical-align: middle;
  margin-right: 10rpx;
  color:#1f4ba5;
}
.more-img{
  width:9rpx;
  height: 16rpx;
  vertical-align: middle;
}
.movies-container{
  display: flex;
  flex-direction: row;
}