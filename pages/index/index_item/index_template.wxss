.post-container{
  display: flex;
  flex-direction:column;
  /* margin-top: 20rpx;
  margin-bottom: 40rpx; */
  background-color: #fff;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  padding: 5px;
}
.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin: 10px 0;
}
.post-image{
  width: 100%;
  margin-left: 16px;
  margin: auto 0;
  margin-bottom: 15px;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size: 13px;
  display: flex;
  flex-direction: row;
  height: 16px;
  margin-left: 10px;
}
.post-like-img{
  height: 16px;
  width: 16px;
  vertical-align: middle;
  margin-right: 8px;
}
.post-like-font{
  margin-right: 20px;
  vertical-align: middle;
}